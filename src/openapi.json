{
	"openapi": "3.0.3",
	"info": {
		"title": "Ecommerce API",
		"version": "1.0.1",
		"description": "This is a web service for managing a user's shopping cart"
	},
	"paths": {
		"/create": {
			"post": {
				"summary": "Create a new shopping cart",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"userId": {
										"type": "string"
									},
									"productId": {
										"type": "number"
									},
									"name": {
										"type": "string"
									},
									"price": {
										"type": "number"
									},
									"quantity": {
										"type": "number"
									}
								}
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "Created"
					},
					"400": {
						"description": "Bad Request"
					}
				}
			}
		},
		"/add-item": {
			"post": {
				"summary": "Add an item to an existing shopping cart",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"userId": {
										"type": "string"
									},
									"productId": {
										"type": "number"
									},
									"name": {
										"type": "string"
									},
									"price": {
										"type": "number"
									},
									"quantity": {
										"type": "number"
									}
								}
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Item added"
					},
					"400": {
						"description": "Bad Request"
					},
					"404": {
						"description": "Cart not found"
					}
				}
			}
		},
		"/remove-item": {
			"post": {
				"summary": "Remove an item from an existing shopping cart",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"userId": {
										"type": "string"
									},
									"productId": {
										"type": "number"
									}
								}
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Item removed"
					},
					"400": {
						"description": "Bad Request"
					},
					"404": {
						"description": "Cart not found"
					}
				}
			}
		},
		"/clear-cart": {
			"post": {
				"summary": "Clear an existing shopping cart",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"userId": {
										"type": "string"
									}
								}
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Cart cleared"
					},
					"400": {
						"description": "Bad Request"
					},
					"404": {
						"description": "Cart not found"
					}
				}
			}
		},
		"/get-cart-count": {
			"post": {
				"summary": "Get the count of items in the cart",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"userId": {
										"type": "string"
									}
								}
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Count retrieved"
					},
					"400": {
						"description": "Bad Request"
					},
					"404": {
						"description": "Cart not found"
					}
				}
			}
		},
		"/get-total-cost": {
			"post": {
				"summary": "Get the total cost of items in the cart",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"userId": {
										"type": "string"
									}
								}
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Total cost retrieved"
					},
					"400": {
						"description": "Bad Request"
					},
					"404": {
						"description": "Cart not found"
					}
				}
			}
		},
		"/get-cart": {
			"post": {
				"summary": "Get the cart",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"userId": {
										"type": "string"
									}
								}
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Cart retrieved"
					},
					"400": {
						"description": "Bad Request"
					},
					"404": {
						"description": "Cart not found"
					}
				}
			}
		},
		"/update-quantity": {
			"post": {
				"summary": "Update the quantity of an item in the cart",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"userId": {
										"type": "string"
									},
									"productId": {
										"type": "number"
									},
									"newQuantity": {
										"type": "number"
									}
								}
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Quantity updated"
					},
					"400": {
						"description": "Bad Request"
					},
					"404": {
						"description": "Cart or item not found"
					}
				}
			}
		}
	}
}